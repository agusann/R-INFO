programa ejemplo
procesos
  proceso tarea1 (E av:numero; E ca:numero)
  comenzar
    Pos(av,ca)
    mientras (HayFlorEnLaEsquina)
      tomarFlor
  fin
  
  proceso tarea2 (E av: numero; E ca:numero)
  comenzar
    Pos(av,ca)
    mientras (HayPapelEnLaEsquina)
      tomarPapel
  fin
  
  proceso tarea3 (E av:numero; E ca:numero)
  comenzar
    Pos(av,ca)
    mientras (HayPapelEnLaBolsa)
      depositarPapel
    mientras (HayFlorEnLaBolsa)
      depositarFlor
  fin
areas
  cuadrante: AreaPC (2,2,100,100)
  jota: AreaP (1,1,1,1)
  uno: AreaP (2,1,2,1)
  dos: AreaP (3,1,3,1)
robots
  robot trabajador
  variables
    av,ca,tarea:numero
    termine:boolean
  comenzar
    termine:=F
    mientras (termine = F)
      RecibirMensaje (tarea,RJ)
      si (tarea <> 4)
        RecibirMensaje (av,RJ)
        RecibirMensaje (ca,RJ)
      si (tarea = 1)
        tarea1(av,ca)
      sino
        si (tarea = 2)
          tarea2(av,ca)
        sino
          si (tarea = 3)
            tarea3(av,ca)
          sino
            termine:=V
      EnviarMensaje (termine,RJ)
  fin
  robot jefe
  variables
    av,ca,tarea,rob:numero
    termine:boolean
  comenzar
    repetir 10
      Random(av,2,100)
      Random(ca,2,100)
      Random (tarea,1,3)
      Random (rob,1,2)
      si (rob = 1)
        EnviarMensaje (tarea,R1)
        EnviarMensaje (av,R1)
        EnviarMensaje (ca,R1)
        RecibirMensaje (termine, R1)
      sino
        EnviarMensaje (tarea,R2)
        EnviarMensaje (av,R2)
        EnviarMensaje (ca,R2)
        RecibirMensaje (termine, R2)
    EnviarMensaje(4,R1)
    RecibirMensaje(termine,R1)
    EnviarMensaje(4,R2)
    RecibirMensaje(termine,R2)
  fin
variables
  RJ: jefe
  R1:trabajador
  R2:trabajador
comenzar
  AsignarArea(RJ, jota)
  AsignarArea(R1, cuadrante)
  AsignarArea(R1, uno)
  AsignarArea(R2, cuadrante)
  AsignarArea(R2, dos)
  Iniciar(RJ, 1,1)
  Iniciar(R1, 2,1)
  Iniciar(R2, 3,1)
fin